<section>
    <div class="container-fluid">
        <div class="row m-5">
            <div class="col-md-12">
                {{#if successMessage }}
                <div class="row">
                    <div class="col-md-12 col-12 col-sm-12 col-lg-12 alert alert-success">
                        {{ successMessage }}
                    </div>
                </div>
                {{/if }}

                {{#if errorMsg }}
                <div class="row">
                    <div class="col-md-12 col-12 col-sm-12 col-lg-12 alert alert-danger">
                        {{ errorMsg }}
                    </div>
                </div>
                {{/if }}

                <div class="row">
                    <div class="col-md-12">
                        <a class="btn btn-success float-end" href="/admin/add-user">Add User</a>
                    </div>
                </div>

                <div class="row mt-3">
                    <table class="table table-bordered table-striped my-5" id="userTable">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Username / Email</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each users}}
                            <tr>
                                <td>{{this.name}}</td>
                                <td>{{this.email}}</td>
                                <td class="text-end">
                                    <a class="btn btn-info" href="/admin/edit-user/{{ this._id }}">Edit</a>
                                    {{#if this.isActive }}
                                    <a class="btn btn-danger"
                                        onclick="return confirm('Are you sure to block ? ')"
                                        href="/admin/disable-user/{{ this._id }}">Block</a>
                                    {{else }}
                                    <a class="btn btn-success"
                                        onclick="return confirm('Are you sure to unblock ? ')"
                                        href="/admin/enable-user/{{ this._id }}">Unblock</a>
                                    {{/if }}

                                    <a class="btn btn-danger"
                                        onclick="return confirm('Are you sure to delete ?')"
                                        href="/admin/delete-user/{{ this._id }}">
                                        Delete
                                    </a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            $('#userTable').DataTable();
        });
    </script>
</section>